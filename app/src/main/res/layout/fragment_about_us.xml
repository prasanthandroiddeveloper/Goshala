<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gen_white"
    android:orientation="vertical"
    tools:context=".fragment.AboutUs">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/green_light"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:visibility="gone"
        android:textSize="28sp"
        android:gravity="center"
        android:text="Contact Us"/>


    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="@dimen/margin_5dp"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:src="@drawable/sp"
        android:scaleType="fitXY"
        android:layout_gravity="center_horizontal"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">


         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:drawableRight="@drawable/website"
            android:gravity="center"
            android:layout_weight="0.1"/>

        <TextView
            android:id="@+id/blogtv"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:text="https://madeinmygoshala.com/"
            android:textColor="#000"
            android:textSize="14sp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_weight="1"/>





    </LinearLayout>

         <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_2dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:layout_weight="0.1"
                    android:drawableRight="@drawable/mail"/>

                <TextView
                    android:id="@+id/facebooktv"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:text="madeinmygoshala@gmail.com"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="#000"
                    android:layout_weight="1"/>





            </LinearLayout>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_2dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:drawableRight="@drawable/location"
                    android:gravity="center"
                    android:layout_weight="0.1"/>

                <TextView
                    android:id="@+id/wtsapptv"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:text="D No-4/684, Rajupeta, Near Ganganamma Temple,Machilipatnam, Krishna, Andhra Pradesh, 521001"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="#000"
                    android:gravity="center"
                    android:layout_weight="1"/>



            </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_2dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:drawableRight="@drawable/phone"
                    android:gravity="center"
                    android:layout_weight="0.2"/>

                <TextView
                    android:id="@+id/contacttv"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:text="+91 7207208385"

                    android:textSize="14sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:layout_weight="1"/>

            <TextView
                android:id="@+id/contacttv1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="+91 7207213437"

                android:textSize="14sp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_weight="1"/>


            </LinearLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>